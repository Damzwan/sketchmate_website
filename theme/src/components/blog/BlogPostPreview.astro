---
import {format} from 'date-fns';
const {post} = Astro.props;

const date = new Date(post.publishDate)
const tags = post.tags
const tagsString = tags.join(' | ');
---

<li class="blog-post__preview">
    <a href={post.href}>
        <img class="blog-post__image" src={post.featuredImage} alt={post.title}/>
        <h3>{post.title}</h3>
        <div style={{ display: 'flex', alignItems: 'center' }}>
            <time><em>{format(date, 'MMMM d, yyyy')}</em></time>
            {tagsString && (
                    <>
                        <span style={{ margin: '0 5px' }}>|</span>
                        <span>{tagsString}</span>
                    </>
            )}
        </div>

    </a>
</li>


<style>
    .blog-post__preview img {
        margin-bottom: 1rem;
        border-radius: calc(var(--theme-shape-radius) / 2);
        transition: border-radius var(--theme-transition);
    }

    .blog-post__image {
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-height: 250px;
    }

    .blog-post__preview:hover img {
        border-radius: var(--theme-shape-radius);
    }

    .blog-post__preview a {
        display: block;
        text-decoration: none;
        color: inherit;
    }

    .blog-post__preview h3 {
        margin: 0;
    }
</style> 